source 'https://rubygems.org'

# Youtube video downloader
gem "ruby-youtube-dl"

# An IRB alternative and runtime developer console
gem 'pry'

# pry-stack_explorer is a plugin for the Pry REPL that enables the user to navigate the call-stack.
gem 'pry-stack_explorer', '~> 0.4.9.1'

# Hirb provides a mini view framework for console applications and uses it to improve ripl(irb)'s default inspect output
gem 'hirb'

# Pretty print your Ruby objects with style -- in full color and with proper indentation
gem 'awesome_print'
